.blog
    padding 10px 0
    background #f5f5f5
    h2
        text-align center
        font-weight normal
        font-size 40px
        color #383838
        margin-bottom 50px
    .liste-posts-content
        display flex
        background #fff
        margin-bottom 20px
        padding 10px
        margin-bottom 20px
        box-shadow 0 10px 15px #999
        .box-img
            flex 1 1 50%
            display flex
            justify-content center
            align-items center
            &--none
                display none
            img
                max-width 100%
                border-radius 10px
                height auto
        .box-content-post
            flex 1 1 50%
            margin auto 0
            &__wrapper
                padding 0 10px 15px
                h2 
                    margin-bottom 20px
                    text-align justify
                a
                    margin 10px 0 0
                    width fit-content
                p
                    margin-left 10px
    .liste-posts-content:nth-child(even)
        flex-direction: row-reverse

