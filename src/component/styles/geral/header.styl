.header
    height 100px
    background-color rgba(0, 0, 0, .7)
    position: fixed
    left: 0
    right: 0
    z-index 9
    .container
        max-width: 1200px
        margin: 0 auto
        a
            color: #cc0000
    &__wrapper
        display flex
        height: 100px
        align-items: center
        justify-content space-between
        h2
            opacity none
        .menu
            display flex
            &-item
                list-style none
                margin: 0 5px
                &:first-child
                    margin-left 0
                &:last-child
                    margin-right 0
    h1
        margin 0
        a
            color #fff
            text-decoration none
    .infor
        padding-top 120px
        margin 0 auto
        width 860px
        text-align center
        h2
            color #fff
            font-size 30px
        p
            color #fff
            font-weight lighter
            font-size 20px
.custom-botao
    display block
    padding 10px 20px
    text-decoration none
    background-color #60d3b1
    color #fff
    border-radius 30px
    margin 10px auto 0
    width 339px
    transition .2s
    &:hover
        opacity .8
        color #353535