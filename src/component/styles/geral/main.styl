.blog
    .posts__boxRight
        margin-top 145px
    .banners
        display none
            position relative
        &__content
            display flex
            align-items center
            position absolute
            height 100%
        &__wrapper
            max-width: 600px
            h2
                font-size 40px
                text-align left
                font-weight bold
                color #fff
                margin 0 0 5px
            p
                font-size 16px
        &__post
            display flex
            justify-content center
            flex-wrap wrap
            position relative
            width 100%
            color #fff
            font-weight bold
        &__img
            margin 0 auto
            width 100%
            max-height 100vh
            display flex
            align-items center
            img
                width 100%
                height auto
                overflow hidden
            &:before
                content ""
                position: absolute
                top 0
                left 0
                width 100%
                height 100%
                background-color rgba(0, 0, 0, .2)
        &__customBotao
            display flex
            align-items center
            color #fff
            margin-top 20px
            img
                width 30px
                height 30px
                margin-right 10px
        .slick-dots
            bottom 30px
            color #000
            li
                color #000
                button
                    color #000
                    &:before
                        color #fff
                        opacity 1
                        font-size 12px
            .slick-active
                button
                    &:before
                        color #cfcfcf
                        
    .banners.slick-initialized
        display block
    h2
        text-align center
        font-weight normal
        font-size 40px
        color #383838
        margin 50px
    .liste-posts-content
        display flex
        background #fff
        margin-bottom 20px
        padding 10px
        margin-bottom 20px
        box-shadow 0 0 10px #999
        .box-img
            flex 1 1 50%
            display flex
            justify-content center
            align-items center
            &--none
                display none
            img
                max-width 100%
                border-radius 10px
                height auto
        .box-content-post
            flex 1 1 50%
            margin auto 0
            &__wrapper
                padding 0 10px 15px
                h2
                    margin-bottom 20px
                    text-align justify
                a
                    margin 10px 0 0
                    width fit-content
                    transition .2s
                    &:hover
                        opacity .8
                        color #353535
                p
                    margin-left 10px
    .liste-posts-content:nth-child(even)
        flex-direction row-reverse